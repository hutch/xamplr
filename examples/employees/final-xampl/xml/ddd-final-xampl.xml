<!--
[RetirementPlan]^[DefinedContribution],
[RetirementPlan]^[DefinedBenefit],
[Payroll]^[HourlyPayroll],
[Payroll]^[SalariedPayroll],
[EmployeeType]->*[RetirementPlan],
[EmployeeType]->*[Payroll],
[Employee]*->[EmployeeType],
[Department]-*[Employee]
-->
<company pid=''
         xmlns="http://example.com/employees">

    <payroll pid='hourly'>
      <hourly-payroll/>
    </payroll>
    <payroll pid='salaried'>
      <salaried-payroll/>
    </payroll>

    <retirement-plan pid='defined-contribution'>
      <defined-contribution/>
    </retirement-plan>
    <retirement-plan pid='defined-benefit'>
      <defined-benefit/>
    </retirement-plan>

    <employee-type pid=''
                   title='janitor'>
      <payroll pid='hourly'/>
      <retirement-plan pid='defined-contribution'/>
    </employee-type>
    <employee-type pid=''
                   title='receptionist'>
      <payroll pid='hourly'/>
      <retirement-plan pid='defined-contribution'/>
    </employee-type>
    <employee-type pid=''
                   title='office-admin'>
      <payroll pid='hourly'/>
      <retirement-plan pid='defined-benefit'/>
    </employee-type>
    <employee-type pid=''
                   title='engineer'>
      <payroll pid='salaried'/>
      <retirement-plan pid='defined-benefit'/>
    </employee-type>
    <employee-type pid=''
                   title='manager'>
      <payroll pid='salaried'/>
      <retirement-plan pid='defined-benefit'/>
    </employee-type>


    <department pid=''
                name='widget design'>
        <employee pid=''
                  name='tom'>
            <employee-type pid=''
                           title='janitor'/>
        </employee>
        <employee pid=''
                  name='mary'
                  title='receptionist'>
            <employee-type pid=''
                           title='receptionist'/>
        </employee>
        <employee pid=''
                  name='bob'
                  title='office-admin'>
            <employee-type pid=''
                           title='office-admin'/>
        </employee>

        <employee pid=''
                  name='jack'>
            <employee-type pid=''
                           title='engineer'/>
        </employee>
        <employee pid=''
                  name='jill'>
            <employee-type pid=''
                           title='manager'/>
        </employee>
    </department>
</company>
